generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SupplementType {
  SEJOUR
  HEBDOMADAIRE
  QUOTIDIEN
}

enum TarifFrequence {
  SEMAINE
  JOUR
  WEEKEND
  PERSONNE
}

model User {
  id       Int    @id @unique @default(autoincrement())
  email    String @unique
  password String
}

model Client {
  id        Int    @id @unique @default(autoincrement())
  nom       String
  prenom    String
  email     String
  telephone String

  reservations Reservation[]
}

model Reservation {
  id         Int      @id @unique @default(autoincrement())
  tarif      Int
  debut      DateTime @db.Date
  fin        DateTime @db.Date
  dateAjout  DateTime @default(now())
  nbPersonne Int
  verif      Boolean  @default(false)

  client   Client? @relation(fields: [clientId], references: [id], onDelete: SetNull)
  clientId Int?

  supplements SupplementOnReservation[]
}

model Supplement {
  id    Int            @id @unique @default(autoincrement())
  label String         @unique @default("")
  tarif Int
  type  SupplementType

  reservations SupplementOnReservation[]
}

model SupplementOnReservation {
  reservation   Reservation @relation(fields: [reservationId], references: [id])
  reservationId Int
  supplement    Supplement  @relation(fields: [supplementId], references: [id])
  supplementId  Int
  nb            Int

  @@id([reservationId, supplementId])
}

model Commentaire {
  id          Int      @id @unique @default(autoincrement())
  verif       Boolean  @default(false)
  created     DateTime @default(now()) @db.Date
  commentaire String
  name        String
  note        Int
}

model Tarif {
  id         Int              @id @unique @default(autoincrement())
  desc       String
  label      String           @unique
  start_date DateTime[]       @db.Date
  end_date   DateTime[]       @db.Date
  vacance    Boolean          @default(false)
  prix       Int
  frequence  TarifFrequence[]
}
